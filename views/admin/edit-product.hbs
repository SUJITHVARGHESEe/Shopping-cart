
<section>
<div class="container  d-flex justify-content-center">
  <div class="row">
    <div class="class">
      <h2 class="text-center">Add product</h2>
      <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label>
        <input value="{{product.name}}" type="text" name="name" class="form-control">
        <label for="">category</label>
        <input value="{{product.category}}" type="text" name="category" class="form-control">
<label for="">price</label>
        <input value="{{product.price}}" type="text" name="price" class="form-control">
        <label  for="">image</label>
        <img src="/product-images/{{product._id}}.jpg" style="height:8rem" id="output" alt="">
        <input   type="file" name="image"   onchange="loadFile(event);"  class="form-control">
         
         <button type="submit" class="btn btn-success mt-4">submit</button>

      </form>
    </div>
  </div>
</div>
</section>

<script>
var loadFile = function(event) {
	var image = document.getElementById('output');
	image.src = URL.createObjectURL(event.target.files[0]);
};
</script>
